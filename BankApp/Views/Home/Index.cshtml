@model BankApp.ViewModels.Accounts.TotalCustomersAccountsAndBalanceSumForCountryViewModel
<!-- Page Heading -->
<div class="container-fluid">
    

    <!-- Topbar Search -->
    <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search text-center" asp-antiforgery="false" asp-action="SearchOnId" asp-controller="Home" method="get">
        <div class="input-group">

            <input id="search" type="number" name="searchid" class="form-control bg-white border-0 small" placeholder="customerid..." aria-label="Search" aria-describedby="basic-addon2">
            <div class="input-group-append">
                <button id="buttonsubmit" class="btn btn-primary" type="submit">
                    <i class="fas fa-search fa-sm"></i>
                </button>
            </div>

        </div>
        <div class="input-group">
            <span class="text-danger">@ViewBag.Error</span>
        </div>




    </form>
    <br />
    <!-- Content Row -->

    @foreach (var country in Model.CountryInfoList)
    {
        <div class="row mt-3">

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Customers <a asp-action="Country" asp-controller="Home" asp-route-country="@country.Country">(@country.Country)</a></div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@country.NumbersOfCustomers</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Accounts <a asp-action="Country" asp-controller="Home" asp-route-country="@country.Country">(@country.Country)</a></div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$">@country.NumbersOfAccounts</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-danger shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Money <a asp-action="Country" asp-controller="Home" asp-route-country="@country.Country">(@country.Country)</a></div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@country.SumAccountBalance.ToString("C2")</div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    }
   </div>
