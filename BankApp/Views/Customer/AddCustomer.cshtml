@model BankApp.ViewModels.Customers.AddNewCustomerViewModel

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form asp-action="AddCustomer" asp-controller="Customer" method="post">
                    <h4>Add new customer</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Gender)</label>
                        <select class="form-control" id="Gender" asp-for="@Model.Gender" asp-items="@Model.GenderList">
                        </select>
                        <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Givenname)</label>
                        <input type="text" asp-for="@Model.Givenname" class="form-control" />
                        <span asp-validation-for="@Model.Givenname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Surname)</label>
                        <input type="text" asp-for="@Model.Surname" class="form-control" />
                        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Streetaddress)</label>
                        <input type="text" asp-for="@Model.Streetaddress" class="form-control" />
                        <span asp-validation-for="@Model.Streetaddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.City)</label>
                        <input type="text" asp-for="@Model.City" class="form-control" />
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.NationalId)</label>
                        <input type="text" asp-for="@Model.NationalId" class="form-control" />
                        <span asp-validation-for="@Model.NationalId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Zipcode)</label>
                        <input type="text" asp-for="@Model.Zipcode" class="form-control" />
                        <span asp-validation-for="@Model.Zipcode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Country)</label>
                        <select class="form-control" id="Country" asp-for="@Model.Country" asp-items="@Model.Countries">
                        </select>
                        <span asp-validation-for="@Model.Country" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Birthday)</label>
                        <input type="date" asp-for="@Model.Birthday" class="form-control" />
                        <span asp-validation-for="@Model.Birthday" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Telephonenumber)</label>
                        <input type="text" asp-for="@Model.Telephonenumber" class="form-control" />
                        <span asp-validation-for="@Model.Telephonenumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.Emailaddress)</label>
                        <input type="text" asp-for="@Model.Emailaddress" class="form-control" />
                        <span asp-validation-for="@Model.Emailaddress" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input value="Create" type="submit" class="btn btn-primary" />
                    </div>
                    <div class="form-group">


                    </div>
                </form>
            </section>
        </div>

    </div>

</div>

