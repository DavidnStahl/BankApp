@model BankApp.ViewModels.Employee.EmployeeListViewModel

    <div class="container">
        <div class="row">
            <!-- Earnings (Monthly) Card Example -->
            <div class="col-xl-12 col-md-5 mb-4 text-center">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body text-primary">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-auto">

                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>Email</th>
                                                    <th>Role</th>
                                                    <th></th>
                                                    <th></th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var employee in Model.Employees)
                                                {
                                                    <tr>
                                                        <td>@employee.EmailAddress</td>
                                                        <td>@employee.Role</td>
                                                        <td><a asp-action="DeleteEmployee" asp-controller="Admin" asp-route-id="@employee.Id">Delete</a></td>
                                                        <td><a asp-action="UpdateEmployee" asp-controller="Admin" asp-route-id="@employee.Id">Update</a></td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    